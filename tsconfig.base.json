{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "outDir": "../build",
    "allowJs": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2018.promise",
      "es2015.proxy",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2018",
      "es2018.regexp"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/node",
      "@types/jest",
      "@types/webpack",
      "@types/webpack-dev-server"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
