{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true
        ],
        "interface-name": [
            false
        ],
        "arrow-parens": false,
        // Pending fix for shorthand property names.
        "object-literal-sort-keys": false,
        "no-implicit-dependencies": [true, "dev"],
        "no-duplicate-imports": {
            "severity": "error",
            "options": {
                "allow-namespace-imports": true
            }
        }
    },
    "rulesDirectory": []
}
